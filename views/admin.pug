doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(content='text/html;charset=utf-8', http-equiv='Content-Type')
    meta(content='utf-8', http-equiv='encoding')
    title Admin Area (#{channel})

  body
    block content
    div(class='app')
      h1 Admin Area
      
      section(class='admin-section leaderboard-settings')
        h2 Leaderboard Settings
        table(class='settings')
            tr
                th Current Theme
                th Background Opacity
                th Last Reset
            tr
                td= leaderboardSettings.theme
                td= leaderboardSettings['background-opacity']
                td= leaderboardSettings['reset-timestamp']
                
        a(href='/admin/' + channel + '/reset') Reset Leaderboard
                
      section(class='admin-section current-leaderboard')
        h2 Current Leaderboard
        ul(class='leaderboard')
            each val in result
                li= val
